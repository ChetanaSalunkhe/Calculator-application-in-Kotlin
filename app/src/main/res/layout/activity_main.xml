<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/border_buttons_3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtval"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="0"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_gravity="top|left"
                android:gravity="top|left"/>

            <!--edittext-->
            <EditText
                android:id="@+id/edtval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/border_transparent"
                android:textColor="@color/colorBlackDark"
                android:layout_gravity="bottom|right"
                android:gravity="bottom|right"/>

        </LinearLayout>

        <!--buttons-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_divide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_buttons"
                android:layout_weight="0.7"
                android:text="/"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_buttons"
                android:layout_weight="0.7"
                android:text="*"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_buttons"
                android:layout_weight="0.7"
                android:text="-"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_decimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_buttons_2"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_buttons"
                android:layout_weight="0.7"
                android:text="+"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_buttons"
            android:layout_weight="1"
            android:text="="
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</LinearLayout>